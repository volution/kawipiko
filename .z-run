:: benchmark / server / 2x2 :: exec -- "${ZRUN[@]}" ':: benchmark / server / mmap' "${@}" --processes 2 --threads 2


<< benchmark / server
	if test "${#}" -ge 1 ; then
		if test "${1:0:1}" != '-' ; then
			_archive="${1}"
			shift -- 1
		else
			_archive=''
		fi
	else
		_archive=''
	fi
	if test -z "${_archive}" ; then
		_archive=./examples/hello-world.cdb
	fi
	"${ZRUN[@]}" ':: go / build / server / release'
	exec -- \
		sudo -u root -n -E -P -- \
		taskset -c 1,2,3 \
		nice -n -19 -- \
		ionice -c 2 -n 0 -- \
		chrt -r 10 \
		prlimit -n16384 -- \
		sudo -u "${USER}" -n -E -P -- \
		env -i \
	./.outputs/binaries/release/kawipiko-server \
			--bind 127.9.185.194:8080 \
			--archive "${_archive}" \
			"${@}" \
	#
!!

